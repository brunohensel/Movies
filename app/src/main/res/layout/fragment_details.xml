<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".presentation.detailsFragment.DetailsFragment">

    <ImageView
        android:id="@+id/imgMovieDetail"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvMovieDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:scrollbars="vertical"
        android:textColor="#ececeb"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        tools:text="Veni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, viciVeni, vidi, vici" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:theme="@style/CustomRatingBar"
        android:progressTint="@android:color/holo_orange_dark"
        android:scaleX=".75"
        android:scaleY=".75"
        android:stepSize="0.5"
        android:rotationY="180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMovieDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>